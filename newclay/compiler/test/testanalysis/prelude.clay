overload #LLType(Int8 ) = LLIntegerType[LLSigned,  8];
overload #LLType(Int16) = LLIntegerType[LLSigned, 16];
overload #LLType(Int32) = LLIntegerType[LLSigned, 32];
overload #LLType(Int64) = LLIntegerType[LLSigned, 64];
