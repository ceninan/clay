//
// destroyUnsafe, initializeFromUnsafe
//

primitiveCopy(ref y, forward x) __c__ """$y = $x;""";

initializeFromUnsafe(ref y, forward x) { primitiveCopy(y, x); }
destroyUnsafe(ref x) {}

